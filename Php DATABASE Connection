<?php
$servername = "localhost"; // Change this to your database server's hostname or IP address
$username = "your_username"; // Change this to your database username
$password = "your_password"; // Change this to your database password
$database = "niyaj"; // Change this to your database name

// Create a connection
$conn = new mysqli($servername, $username, $password, $database);

// Check connection
if ($conn->connect_error) {
    die("Connection failed: " . $conn->connect_error);
}
?>
